state = board


function Minimax(state, depth, ismaximising, alpha, beta)
  val = max_val(state)
  return action in successors(state) with value val
  
  
function max_value(state)
  if terminal(s)
    return utility(s)
  val = -infinity
  
  for a, s in successors(state) do 
    val = max(v, min_val(s))
  return val
  
  
function min_value(State)
  if terminal(state)
    return utility(s)
    
  val = +infinity
  
  for a, s in successors(state) do 
    val = min(v, max_value(s))
  
  return v
